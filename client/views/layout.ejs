<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Tech</title>
    <script src="https://kit.fontawesome.com/039f0e1c77.js" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <link href="/Carousel/owl.carousel.min.css" type="text/css" rel="stylesheet">
    <link href="/Carousel/owl.theme.default.min.css" type="text/css" rel="stylesheet">
    <link href="/css/home.css" type="text/css" rel="stylesheet">
    <link href="/css/categories.css" type="text/css" rel="stylesheet">
    <link href="/css/product.css" type="text/css" rel="stylesheet">
    <link href="/css/descriptionProduct.css" type="text/css" rel="stylesheet"> 
    <link href="/css/cart.css" type="text/css" rel="stylesheet">
    <link href="/css/note.css" type="text/css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script>

    <style>
        .fotorama__nav__shaft {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <%- body %>
    <%- include('../partials/footer.ejs') %>
    <script src="/Carousel/owl.carousel.min.js"></script>
    <script src="/Js/event.js"></script>
    <script src="/Js/home.js"></script>
    <script src="/Js/categories.js"></script>
    <script src="/Js/cart_container.js"></script>
    <script src="/Js/productDetail.js"></script>
    <script src="/Js/search.js"></script>
    <script src="/Js/cart.js"></script>
    <script src="/Js/main.js"></script>
    <script>
        $('.listBanner').owlCarousel({
            items: 1,
            loop: true,
            dots: false,
            center: true,
            margin: 10,
            URLhashListener: true,
            startPosition: 'URLHash',
            autoplay: true,
            autoplayTimeout: 4000,
            autoplayHoverPause: true,
            onChange: function (evt) {
                let index = evt.item.index;
                $('.slideControl a').removeAttr('style');
                $(`.slideControl a[href="#${index}"]`).css('font-weight', 'bold');
            }
        });

        $('.mainBannerCategories').owlCarousel({
            items: 1,
            loop: true,
            autoplay: true,
            autoplayTimeout: 4000,
            autoplayHoverPause: true
        })
    </script>
    <script>
        $('.listSliderDescription').owlCarousel({
            items: 1,
            loop: true,
            center: true,
            margin: 10,
            dots: true,
            nav: true
        });
    
        $('.ytplay').click(function () {
            $('.videoshow').show();
            let $video = $('.videoshow').fotorama();
            let videoFotorama = $video.data('fotorama');
            videoFotorama.requestFullScreen();
            videoFotorama.playVideo();
            $video.on('fotorama:unloadvideo', function () {
                videoFotorama.destroy();
            })
        })
    
        $('.showMore').click(function (evt) {
            evt.preventDefault();
            $(this).hide();
            $('.contentDescription').addClass('showContentDescription')
        })
    </script>
</body>
</html>