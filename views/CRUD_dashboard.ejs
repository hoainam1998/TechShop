                <!-- dienthoai- cau hinh -->
                <li class="smartphone_ch_input">
                    <label>Man hinh:</label>
                    <input type="text" name="manhinh" placeholder="vd: FPS 6.0 FullHD" required>
                </li>
                <li class="smartphone_ch_input">
